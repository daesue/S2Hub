<Window x:Class="S2Hub_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S2Hub_App"
        mc:Ignorable="d"
        Title="S2Hub" Height="600" Width="1024">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <!-- 왼쪽 30% -->
            <ColumnDefinition Width="7*" />
            <!-- 오른쪽 70% -->
        </Grid.ColumnDefinitions>

        <!-- 왼쪽: 디렉토리 탐색 트리 -->
        <TreeView Name="DirectoryTree" Grid.Column="0"
                  SelectedItemChanged="DirectoryTree_SelectedItemChanged"
                  Margin="5"/>

        <!-- 오른쪽: 파일 목록 -->
        <ListView Name="FileList" Grid.Column="1" Margin="5">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="파일 이름" DisplayMemberBinding="{Binding Name}" Width="200"/>
                    <GridViewColumn Header="크기 (KB)" DisplayMemberBinding="{Binding Size}" Width="100"/>
                    <GridViewColumn Header="수정일" DisplayMemberBinding="{Binding Modified}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
