<Window x:Class="S2Hub_App.InfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S2Hub_App"
        mc:Ignorable="d"
        Title="Info"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#FAFAFA" ShowInTaskbar="False" WindowStyle="ToolWindow">


    <Border BorderBrush="#DDD" BorderThickness="1" Padding="20" CornerRadius="10">
        <StackPanel HorizontalAlignment="Center">

            <!-- 캐릭터 이미지 -->
            <Image Source="/Assets/Images/bethetop.png"
                   Width="120" Height="120"
                   Margin="0 0 0 15"
                   Stretch="Uniform"
                   ClipToBounds="True" />

            <!-- 앱 이름 -->
            <TextBlock Text="Smart Stow Hub"
                       FontSize="20"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       Margin="0 0 0 5"/>

            <!-- 버전 -->
            <TextBlock x:Name="VersionText"
                       FontSize="14"
                       Margin="0 0 0 10"
                       TextAlignment="Center"/>

            <!-- Developer -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Developer: " FontWeight="Bold"/>
                <TextBlock Text="Bethetop" />
            </StackPanel>

            <!-- GitHub 링크 -->
            <TextBlock Text="https://github.com/daesue/S2Hub"
                       Foreground="#3366CC"
                       Cursor="Hand"
                       TextDecorations="Underline"
                       Margin="0 10 0 20"
                       MouseDown="OnGithubClick" />

            <Button Content="확인" Width="80" Margin="0 10 0 0"
                    Click="OnCloseClick" IsDefault="True" />
        </StackPanel>
    </Border>

</Window>
